<div class= "container pt-3" style="background-color: white">

	<div class="row">
		<div id="myModal" class="modal" tabindex="-1" role="dialog">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<div class="modal-title" style="color: red"></div>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						  <span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal_show_image">
						<img src="/images/image3.png" alt="..." class="card-img image_modal">
					</div>
					<div class="modal-footer overide-footer">
						<p class="decription_photo_show">sdfsdf</p>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-12 col-sm-4 col-md-4 col-lg-4">
			<div class="cover-thumnail">
				<img src=<%= @album.source %> class="one-photos rounded" style="width: 230px; height: 230px" alt="...">
			</div> 
		</div>
		<div class="col-12 col-sm-8 col-md-8 col-lg-8">
			<div class="cover-thumnail">
				<h1 class="name-account"><%= @album.title %></h1>
				<h3><%= @album.decription %></h3>
			</div> 
		</div>
		<hr>
	</div>

	<div class="row pt-5">
		<% @photos.each do |photo| %>
			<div class="col-12 col-sm-6 col-md-4 col-lg-3">
				<div class="cover-thumnail">
					<img src=<%= photo.source %> class="one-photos rounded" style="width: 230px; height: 230px" alt="...">
				</div> 
			</div>
		<% end %>
	</div>


	<div class="row">
		
	</div>
</div>

