<h1>Album title: <%= @album.title %></h1>
<p>created at: <%= @album.created_at %> </p>

<div class= "container pt-3" style="background-color: white">

	<div class="row">
		<div id="myModal" class="modal" tabindex="-1" role="dialog">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<div class="modal-title" style="color: red"></div>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						  <span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal_show_image">
						<img src="/images/image3.png" alt="..." class="card-img image_modal">
					</div>
					<div class="modal-footer overide-footer">
						<p class="decription_photo_show">sdfsdf</p>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		<% @photos.each do |photo| %>	
			<div class="col-12 col-sm-12 col-md-6 model">
					<div class='row no-gutters shadow'>
						<div class='col-md-7'>
							<img src=<%= photo.source %> alt="..." class="card-img image">
						</div>
						<div class='col-md-5 decrible'>
							<div class='card-body' style='background-color: #F8F8F8'>
								<h5 class='card-title'>tên ảnh: <%= photo.title %></h5>
								<p class='card-text'>ngày tạo: <%= photo.created_at %></p>
								<i class='fas fa-heart'></i>
							</div>
						</div>
					</div>
			</div>
		<% end %>
	</div>


	<div class="row">
		
	</div>
</div>

