<div class= "container pt-3" style="background-color: white">

	<div class="row">
		<div class="myModal modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
			<div class="modal-dialog modal-lg" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<div class="text-modal-title">sdfasdfasd</div>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
						<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
							<div class="carousel-inner">
								<div class="carousel-item active">
									<img class="d-block w-100" src=<%= @album.source %> alt="First slide">
								</div>
								<%= @photos.each do |photo| %>
									<div class="carousel-item">
										<img class="d-block w-100" src=<%= photo.source %> alt="First slide">
									</div>
								<% end %>
							</div>
							<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="sr-only">Previous</span>
							</a>
							<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="sr-only">Next</span>
							</a>
						</div>
					</div>
					<div class="modal-footer overide-footer"></div>
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="cover-thumnail">
			<p class="name-account"><%= @album.title %></>
		</div> 
		
	</div>
	<hr>
	<div class="row pt-5">
		<% @photos.each do |photo| %>
			<div class="col-12 col-sm-6 col-md-4 col-lg-3" data-toggle="modal" data-target="#exampleModal">
				<div class="cover-thumnail">
					<img src=<%= photo.source %> class="one-photos rounded" style="width: 230px; height: 230px" alt="...">
				</div> 
			</div>
		<% end %>
	</div>


	<div class="row">
		
	</div>
</div>

