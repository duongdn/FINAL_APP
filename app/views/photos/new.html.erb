<div class="container pt-3" style="border-style: solid;">
		<div class="row">
			<div class="card col-md-4">
				<div class="container">
					<%= form_for @photo do |f| %>
						<div class="form-group">
							<label for="exampleInputEmail1">Title</label>
							<%= f.text_field :title, :class => "form-control" %>
						</div>
						
						<div class="form-group">
							<label for="exampleInputPassword1">Decription</label>
							<%= f.text_field :decription, :class => "form-control" %>
						</div>

						<div class="form-group">
							<label for="exampleInputPassword1">Status</label>
							<%= f.check_box :status, :class => "form-control"%>
						</div>

						<div class="form-group">
							<label for="exampleInputPassword1">Chose file</label>
							<%= f.file_field :source, accept: "image/jpeg, image/gif, image/png, image/jpg" %>
						</div>
						<%= f.submit 'Submit', :class =>"btn btn-primary"%>
					<% end %>
				</div>
			</div>
		</div>
	</div>
